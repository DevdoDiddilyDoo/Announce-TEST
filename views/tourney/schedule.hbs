<div class="container">
	<h1>Tourney Schedule</h1>

	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Scheduled For</th>
				<th>Racers</th>
				<th>Commentary</th>
				<th>Restream</th>
			</tr>
		</thead>
		{{#each events}}
			<tr>
				<td><a class="btn btn-info" href="/tourney/races/{{_id}}"><i class="fas fa-clipboard-list"></i></a></td>
				<td>{{localize when}}</td>
				<td>
					{{{decorateRacers match1.players}}}
					{{#if match2}}
						<br>{{{decorateRacers match2.players}}}
					{{/if}}
				</td>
				<td>
					{{{parseCommentary commentators}}}
				</td>
				<td>{{{restreamStatus channel}}}</td>
			</tr>
		{{/each}}
	</table>
</div>